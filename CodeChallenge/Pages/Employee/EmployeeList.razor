@page "/"

@inherits EmployeeListBase

<h3>Employees</h3>

@if (Employees == null)
{

}
else
{

    <AddEmployeeDialog @ref="AddEmployeeDialog" />
    <UpdateEmployeeDialog @ref="UpdateEmployeeDialog" />
    <DeleteEmployeeDialog @ref="DeleteEmployeeDialog" />

    <div class="text-right">
        <button class="btn btn-success" @onclick="() => AddEmployeeDialog.OpenDialog()">Add Employee</button>
    </div>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>Employee Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Date Hired</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Employees)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Gender</td>
                    <td>@item.DateHired.ToShortDateString()</td>
                    <td>
                        <button class="btn btn-primary" @onclick="() => UpdateEmployeeDialog.OpenDialog(item.Id)">Edit</button>
                        <button class="btn btn-danger" @onclick="() => DeleteEmployeeDialog.OpenDialog(item.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>


}

